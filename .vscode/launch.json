{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Express.js server side",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "command": "npm run dev",
        },
        {
            "name": "Debug Next.js in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "preLaunchTask": "npm: dev",
        },
        {
            "name": "Debug Next.js in Edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "preLaunchTask": "npm: dev",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test File with Coverage",
            "program": "${workspaceFolder}/scripts/jest/run-with-coverage.js",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "group": "test",
                "order": 1,
                "hidden": false
            }
        }
    ],
    "compounds": [
        {
            "name": "API, Frontend Chrome",
            "configurations": [
                "Debug Express.js server side",
                "Debug Next.js in Chrome"
            ],
            "presentation": {
                "reveal": "always",
                "group": "Compounds",
                "order": 0,
                "hidden": false
            }
        },
        {
            "name": "API, Frontend Edge",
            "configurations": [
                "Debug Express.js server side",
                "Debug Next.js in Edge"
            ],
            "presentation": {
                "reveal": "always",
                "group": "Compounds",
                "order": 1,
                "hidden": false
            }
        }
    ]
}